<h2>Редактирование поста</h2>
<%= form_for :post, url: post_path(@post), method: :patch do |f| %> <!--method: :patch - метод заполнения полей -->
	<% if @post.errors.any? %> <!-- если возникает ошибка с передоваемой переменной -->
		<% @post.errors.full_messages.each do |msg| %> <!-- перебор возможных ошибок -->
			<div class="alert alert-danger"><%= msg %></div>
		<% end %>
	<% end %>
	<p> 
    	Название<br>
    	<%= f.text_field(:title, {:class => 'form-control'}) %>
	</p>

	<p> 
    	Текст статьи<br>
    	<%= f.text_area(:body, {:class => 'form-control'})%>
	</p>

	<p> 
    	<%= f.submit({:class => 'btn btn-success'}) %>
	</p>

<% end %>